<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.employee}">
			<div class="{new2.box}">


				<div class="{new2.box-context}">

					<div class="{new2.box-info}">
						<div class="{new2.form}">

							<div class="{new2.form-line} {new2.news-receive}">
								<label class="{new2.label}" style="padding-bottom: 3px;">接收人：</label>
								<div class="{new2.element}" style="padding-bottom: 3px;">

									<g:TextBox ui:field="staffName" styleName="{new2.text}"
										enabled="false"></g:TextBox>
									<g:Hidden ui:field="staffId"></g:Hidden>
								</div>

								<label class="{new2.label}" style="padding-bottom: 3px;">标题：</label>
								<div class="{new2.element}" style="padding-bottom: 3px;">

									<g:TextBox ui:field="title" styleName="{new2.text}"></g:TextBox>

								</div>
							</div>
							<div class="{new2.form-line}">
								<label class="{new2.label}">邮件内容：</label>
								<div class="{new2.element}">
									<g:TextArea ui:field="content" styleName="{new2.textarea}" />
									<p class="{new2.tishi}">
										还能输入
										<span><g:InlineLabel ui:field="message"/></span>
										个字
									</p>
								</div>
							</div>





						</div>
						<div class="{new2.remark} {new2.remark-info}">
							<div class="{new2.remark-tool}" style="text-align: center;">
								<g:Button ui:field="saveBtn" text="发送" styleName=" {new2.button}" />
								<g:Button ui:field="returnBtn" text="取消"
									styleName="{new2.button} {new2.cannel-button}" />
							</div>
						</div>
					</div>

				</div>

				<div class="{new2.box-bottom}"></div>
				<span class="{new2.box-bl}"></span>
				<span class="{new2.box-br}"></span>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 