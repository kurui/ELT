<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:image field="login_bg" resource="login_bg.jsp"
		repeatStyle="Horizontal"></ui:image>
	<ui:image field="login" resource="login.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:image field="login_text" resource="login_text.jpg"></ui:image>
	<ui:image field="input_text2" resource="input_text2.jpg"></ui:image>
	<ui:image field="login_sub" resource="login_sub.jpg"></ui:image>
	<ui:style src="login.css"></ui:style>
	<g:ScrollPanel>
	<g:HTMLPanel>
		<div id="login">
			<table width="100%" height="183" border="0" cellpadding="0"
				cellspacing="0">
				<tr>
					<td width="28%" height="41" class="{style.title}">账号：</td>

					<td width="42%" class="{style.intext}">
						<div>
							<g:TextBox ui:field="username" />
						</div>
					</td>
					<td width="30%" class="{style.intext}">
					</td>
				</tr>
				<tr>
					<td height="42" class="{style.title}">密码：</td>
					<td class="{style.intext}">
						<div>
							<g:PasswordTextBox ui:field="password" />
						</div>
					</td>
					<td>
						<g:Label ui:field="forgetPwd" text="忘记密码" styleName="ipointer"></g:Label>
					</td>
				</tr>
			<tr>
					<td height="42" class="{style.title}">验证码：</td>
					<td colspan="2">
						<table border="0" cellpadding="0"
							cellspacing="0" id="tab">
							<tr>
								<td>
									<div id="inputText2">
										<g:TextBox ui:field="codeCheck"></g:TextBox>
									</div>
								</td>
								<td>
									<g:Image ui:field="verifyImage" styleName="verifyImage"></g:Image>
								</td>
								<td>
									<g:Label ui:field="prompt" text="看不清" styleName="ipointer"></g:Label>
								</td>
							</tr>
						</table>
					</td>
				</tr>
				
				<tr>
					<td height="28">
					</td>
					<td class="{style.intext}">
						<g:Button ui:field="loginButton" styleName="submit">登录</g:Button>
					</td>
					<td class="{style.intext}">
					</td>
				</tr>
			</table>

			<div class="{style.bottom}">
				<span style="float:right">版权所有 深圳积享通信息技术有限公司</span>
				客服热线：400-6688998
			</div>
		</div>
	</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder>