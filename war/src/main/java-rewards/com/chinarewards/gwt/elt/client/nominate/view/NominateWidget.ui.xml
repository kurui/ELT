<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<ui:image resource="input_text.jpg" field="input_text"
		repeatStyle="Horizontal"></ui:image>
	<ui:image resource="preview_bg.jpg" field="preview_bg"
		repeatStyle="Horizontal"></ui:image>
	<ui:image field="post_bg" resource="post_bg.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:style src="rewardsItem.css" field="item"></ui:style>
	<g:HTMLPanel>

		<!-- 1内容 -->
		<div class="{item.detail-content}">
			<!-- 2基本设置 -->
			<div class="{item.setDetail}">
				<h3>请为奖项提名
				</h3>
				<table width="100%" border="0" cellspacing="0" cellpadding="0"
					class="{item.mmtable}">

					<tr>
						<td valign="top" class="{item.title}">奖项名称：</td>
						<td class="" colspan="3">
							<g:Label text="等待数据加载..." ui:field="name" />
						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">奖项说明：</td>
						<td class="" colspan="3">
							<g:Label text="等待数据加载..." ui:field="explain" />
						</td>

					</tr>

					<tr>
						<td valign="top" class="{item.title}">获奖条件：</td>

						<td class="" colspan="3">
							<g:Label text="等待数据加载..." ui:field="condition" />
						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">奖项总积分：</td>

						<td class="" colspan="3">

							<g:Label text="等待数据加载..." ui:field="integral" />

						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">提名奖项：</td>

						<td colspan="3">
							项目奖，共
							<g:InlineLabel text="等待数据加载..." ui:field="number" />
							名，每人奖励
							<g:InlineLabel text="等待数据加载..." ui:field="awardAmt" />
							积分
						</td>

					</tr>


					<tr>
						<td valign="top" class="{item.title}">创建人：</td>

						<td class="" colspan="3">

							<g:Label text="等待数据加载..." ui:field="recordName" />

						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">提名人：</td>

						<td class="" colspan="3">

							<g:VerticalPanel ui:field="judge" />

						</td>

					</tr>
			<!--		<tr>
						<td valign="top" class="{item.title}">待提名人：</td>

						<td class="" colspan="3">

							<g:VerticalPanel ui:field="candidate" />

						</td>

					</tr>-->
					<!-- 选待提名人 -->
					<tr>

						<td colspan="3" id="noPaddingTd">
							<g:FlowPanel ui:field="staffPanel" />
						</td>
					</tr>


					<tr>
						<td valign="top" class="{item.title}">奖项模式：</td>

						<td class="" colspan="3">

							<g:Label text="等待数据加载..." ui:field="awardNature" />

						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">开始时间：</td>

						<td>

							<g:Label text="等待数据加载..." ui:field="begindate" />

						</td>
						<td valign="left" class="{item.title}">预计颁奖时间：</td>

						<td>

							<g:Label text="等待数据加载..." ui:field="awarddate" />

						</td>
					</tr>
					<tr>
						<td valign="top" class="{item.title}">提名：</td>

						<td class="" colspan="3">

							<g:InlineLabel text="等待数据加载..." ui:field="nominateMessage" />
							提名时间:
							<g:InlineLabel text="等待数据加载..." ui:field="expectNominateDate" />
							提名人：
							<g:InlineLabel text="等待数据加载..." ui:field="nominateStaff" />


						</td>

					</tr>
					<tr>
						<td valign="top" class="{item.title}">颁奖人：</td>

						<td class="" colspan="3">

							<g:Label text="等待数据加载..." ui:field="awardName" />


						</td>

					</tr>
					<tr align="center">


						<td valign="top" class="" colspan="4">

							<g:Button styleName="" ui:field="nominatebutton" text="提交提名"
								width="100px" height="25px" />


						</td>

					</tr>
				</table>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 
