<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>	
	<ui:style>
		.interval { width: 50px; }
	</ui:style>
	<ui:style src="elt_min.css" field="newitem"></ui:style>
	<g:HTMLPanel ui:field="select1" styleName="{newitem.frame-wrap}">
		<div style="width:400px;">
			<table cellspadding="0" cellspacing="0" border="0" class="{newitem.form}">
				<tr>
					<td>
						<g:RadioButton ui:field="radioDay" name="frequency" />日
					</td>
					<td rowspan="4" style="padding-left:30px">
						<g:FlowPanel ui:field="dayPanel">
							<g:Grid>
								<g:row>
									<g:customCell><g:Label>每</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="dayInterval" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>日</g:Label></g:customCell>
								</g:row>
							</g:Grid>
						</g:FlowPanel>
						<g:FlowPanel ui:field="weekPanel">
							<g:Grid>
								<g:row>
									<g:customCell><g:Label>每</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="weekInterval" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>个星期</g:Label></g:customCell>
								</g:row>
							</g:Grid>
							<g:Grid>
								<g:row>
									<g:customCell><g:CheckBox ui:field="sunday" /></g:customCell>
									<g:customCell><g:Label>日</g:Label></g:customCell>
									<g:customCell><g:CheckBox ui:field="monday" /></g:customCell>
									<g:customCell><g:Label>一</g:Label></g:customCell>
									<g:customCell><g:CheckBox ui:field="tuesday" /></g:customCell>
									<g:customCell><g:Label>二</g:Label></g:customCell>
									<g:customCell><g:CheckBox ui:field="wednesday" /></g:customCell>
									<g:customCell><g:Label>三</g:Label></g:customCell>
								</g:row>
								<g:row>
									<g:customCell><g:CheckBox ui:field="thursday" /></g:customCell>
									<g:customCell><g:Label>四</g:Label></g:customCell>
									<g:customCell><g:CheckBox ui:field="friday" /></g:customCell>
									<g:customCell><g:Label>五</g:Label></g:customCell>
									<g:customCell><g:CheckBox ui:field="saturday" /></g:customCell>
									<g:customCell><g:Label>六</g:Label></g:customCell>
								</g:row>
							</g:Grid>
						</g:FlowPanel>
						<g:FlowPanel ui:field="monthPanel">
							<g:Grid>
								<g:row>
									<g:customCell><g:Label>每</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="monthInterval" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>个月的第</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="monthFreqDayofMonth" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>日</g:Label></g:customCell>
								</g:row>
							</g:Grid>
						</g:FlowPanel>
						<g:FlowPanel ui:field="yearPanel">
							<g:Grid>
								<g:row>
									<g:customCell><g:Label>每</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="yearInterval" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>年的</g:Label></g:customCell>
									<g:customCell><g:ListBox ui:field="yearFreqMonth"></g:ListBox></g:customCell>
									<g:customCell><g:Label>月的第</g:Label></g:customCell>
									<g:customCell><g:TextBox ui:field="yearFreqDayOfMonth" styleName='{style.interval}'></g:TextBox></g:customCell>
									<g:customCell><g:Label>日</g:Label></g:customCell>
								</g:row>
							</g:Grid>
						</g:FlowPanel>
					</td>
				</tr>
				<tr>
					<td>
						<g:RadioButton ui:field="radioWeek" name="frequency" />星期
					</td>
				</tr>
				<tr>
					<td>
						<g:RadioButton ui:field="radioMonth" name="frequency" />月
					</td>
				</tr>
				<tr>
					<td>
						<g:RadioButton ui:field="radioYear" name="frequency" />年
					</td>
				</tr>
				
			</table>
		</div>
		<div id="post">
			<span class="{newitem.btn}"><g:Button ui:field="ok" >确定</g:Button></span>
			<span class="{newitem.btn}"><g:Button ui:field="cancel" styleName="button-cancel">取消</g:Button></span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>