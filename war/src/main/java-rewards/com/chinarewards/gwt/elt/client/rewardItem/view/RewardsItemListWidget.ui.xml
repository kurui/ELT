<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
	<ui:image field="post_bg" resource="post_bg.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:image field="button_search" resource="button_search.jpg"></ui:image>
	<ui:image field="button_add" resource="button_add.jpg"></ui:image>
	<ui:style src="rewardsItemSearch.css" field="item"></ui:style>
	<ui:style src="elt_min.css" field="newitem"></ui:style>
	<g:HTMLPanel styleName="{newitem.frame-wrap}">
	
	 <div class="breadcrumb">   
	    <div class="{newitem.breadcrumb-wrap}">
	      <p class="{newitem.breadcrumb-left}"><a href="#">公司奖项库</a> > <span>奖项列表</span></p>
	      <a href="#" class="{newitem.breadcrumb-right}">返回上一页</a>
	    </div>
    </div>
    <span class="{newitem.cutline}"></span>
 
		<!-- 查询条件 -->
				<div class="{newitem.query-wrap}" >
			<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<td width="20%" align="right">奖项名称:</td>
				<td width="8%">
					<g:TextBox ui:field="name" />
				</td>
				
				<td width="19%" align="right" style="display:none">设立部门:</td>
				<td width="19%" style="display:none">
					<g:FlowPanel ui:field="departmentName" />

				</td>
				<td width="20%" style="display:none">
					<g:CheckBox ui:field="chooseSubDepartment" />
					包含子部门
				</td>
				
				<td width="14%">
					<span class="{newitem.btn}"><g:Button ui:field="search" >搜索</g:Button></span>
				</td>
			</tr>
			
		</table>
		</div>
		
		  <p class="{newitem.send-news}"><span class="{newitem.btn}">
		   <g:Button ui:field="addBtn" >新增奖项
			</g:Button></span></p>
		 <div class="{newitem.table}">
			<g:FlowPanel ui:field="result"></g:FlowPanel>
		 </div>
		 <!--分页 [[-->
		  <div class="{newitem.pager}">
		    <div class="{newitem.pager-left}">
		       <g:FlowPanel ui:field="pager"></g:FlowPanel>

		    </div>
		
		    <div class="{newitem.pager-right}">
		      
		    </div>
		  </div>
		  <!--分页 ]]-->

	</g:HTMLPanel>
</ui:UiBinder>