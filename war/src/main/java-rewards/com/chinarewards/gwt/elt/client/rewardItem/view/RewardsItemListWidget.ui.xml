<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
	<ui:image field="post_bg" resource="post_bg.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:image field="button_search" resource="button_search.jpg"></ui:image>
	<ui:image field="button_add" resource="button_add.jpg"></ui:image>
	<ui:style src="rewardsItemSearch.css" field="item"></ui:style>
	<ui:style src="elt_min.css" field="newitem"></ui:style>
	<g:HTMLPanel styleName="{newitem.frame-wrap}">
	
	 <div class="breadcrumb">   
	    <div class="{newitem.breadcrumb-wrap}">
	      <p class="{newitem.breadcrumb-left}">
	      <a href="#" style="color:#565656;text-decoration:none;">公司奖项</a>
						-> <span>奖项列表</span></p>
	      <a href="#" class="{newitem.breadcrumb-right} {newitem.back-btn}"
						style="color:#565656;text-decoration:none;">返回上一页</a>
	    </div>
    </div>
    <span class="{newitem.cutline}"></span>
 
		<!-- 查询条件 -->
			<div class="{newitem.query-wrap}" >
			<table width="100%" border="0" cellspacing="0" cellpadding="0" class="{newitem.form}">
			 <tr>
				<td width="7%" align="right">奖项名称:</td>
				<td width="10%">
					<g:TextBox ui:field="name" styleName="{newitem.text}"/>
				</td>
				
				<td width="7%" align="right" style="display:">部门:</td>
				<td width="10%">
					<g:FlowPanel ui:field="departmentName" />
                    <select class="{newitem.select}" width="200px">
                    <option value="">技术部</option>
                    <option value="">财务部</option>
                    <option value="">人事部</option>
                    </select>
				</td>
				<td width="7%" align="right" >创建时间:</td>
				<td width="10%" >
				     <d:DateBox ui:field="createTime" styleName="{newitem.text}"/>
				</td>
				<td width="1%" align="left">—</td>
				<td width="10%" align="right">
				     <d:DateBox ui:field="createTimeEnd" styleName="{newitem.text}"/>
				</td>
				<td width="10%" style="display:none">
					<g:CheckBox ui:field="chooseSubDepartment" />
					包含子部门
				</td>
				<td width="7%" align="right">应用状态:</td>
				<td width="10%">
					<g:ListBox ui:field="status" styleName="{newitem.select}" />
				</td>
				<td align="left">
					<span class="{newitem.nbsp}"></span><span class="{newitem.btn}"><g:Button ui:field="search" >搜索</g:Button></span>
				</td>
			</tr>
			
		</table>
			
		</div>
		
		  <p class="{newitem.send-news}"><span class="{newitem.btn}">
		   <g:Button ui:field="addBtn" >创建奖项
			</g:Button></span></p>
		 <div class="{newitem.table}">
			<g:FlowPanel ui:field="result"></g:FlowPanel>
		 </div>
		 <!--分页 [[ -->
			<div class="{newitem.pager}">
				<div class="{newitem.pager-left}">
					每页显示条数
					<select class="{newitem.select}">
						<option>10</option>
						<option>15</option>
					</select>
				</div>

				<div id="rewardlist_page" class="{newitem.pager-right}">
					<g:FlowPanel ui:field="pager" />
				</div>
			</div>
			<!--分页 ]] -->
    <span class="{newitem.cutline}"></span>
	</g:HTMLPanel>
</ui:UiBinder>
