<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
   	
   	<ui:image resource="input_text.jpg" field="input_text" repeatStyle="Horizontal"></ui:image>
	<ui:image resource="preview_bg.jpg" field="preview_bg" repeatStyle="Horizontal"></ui:image>
	<ui:image field="post_bg" resource="post_bg.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:style src="rewardsItem.css" field="item"></ui:style>
	<g:HTMLPanel>
	<!-- add form tag, using to resolve radioButton groupname -->
				<!-- 1内容 -->
                <div class="{item.detail-content}">    
                <!-- 2基本设置 -->
                  <div class="{item.setDetail}">
                    <h3>基本设置
                   		 <!--
	                      <input type="button" class="up"/>
	                      <input type="button" class="down"/>
  						-->
                    </h3>
                    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="{item.mmtable}">
                      <tr>
                        <td valign="top" class="{item.title}"> 奖项名称：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="rewardsName" styleName="textmy"/></td>
                      	
                      </tr>
                      
                      <tr>
                        <td valign="top" class="{item.title}"> 奖项说明：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="rewardsDefinition"  styleName="textmy" /></td>
                    	
                      </tr>
                      <tr>
                        <td valign="top" class="{item.title}"> 奖项条件：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="standard"  styleName="textmy" /></td>
                     	
                      </tr>
					  <tr>
                        <td valign="top" class="{item.title}"> 获奖名额：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="peopleSizeLimit" styleName="textmy"/></td>
                      </tr>
                      <tr>
                        <td valign="top" class="{item.title}"> 总积分：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="totalJF" styleName="textmy"/></td>
                     	
                      </tr>
                      <tr>
                        <td valign="top" class="{item.title}"> 每人得奖积分：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="rewardsFrom" styleName="textmy"/></td>
                     	
                      </tr>
                       <tbody id="tm">
                       <tr>
				           <td valign="top" class="{item.title}"> 提名人：</td>
				           <td class="{item.intext}" colspan="2"><g:FlowPanel ui:field="staffAreaPanel" styleName="textmy"/> </td>
				              
				       </tr>
				       </tbody>
                      <tr>
				            <td valign="top" class="{item.title}"> 候选人：</td>
				            <td class="{item.intext}" colspan="2"><g:FlowPanel ui:field="staffPanel" styleName="textmy"/> </td>
				               
				       </tr>
                     
					  <tr>
					  <td valign="top" class="{item.title}">奖项模式</td>
					  <td  class="{item.intext}" colspan="2" ><g:Label ui:field="itemModel" styleName="textmy"/></td>
					  </tr>
                       <tr>
                        <td class="{item.title}"> 开始时间： </td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="startTime" styleName="textmy"/></td>
                      	
                      </tr>
                     <tbody id="ones">
                      <tr>
                        <td valign="top" class="{item.title}">预计颁奖时间：</td>
                        <td class="{item.intext}" colspan="2"><g:InlineLabel ui:field="expectTime" styleName="textmy"/>     提前<g:InlineLabel ui:field="tmdays" />天提名</td>
						
                      </tr>
                      </tbody>
                      <tbody id="period"> 
                       <tr>
                        <td valign="top" class="{item.title}">下次颁奖时间：</td>
                        <td class="{item.intext}" colspan="2"><g:InlineLabel ui:field="nextRewardsTime" styleName="textmy" />   提前<g:InlineLabel ui:field="tmday" />天提名</td>
						
                      </tr>                     	
                      <tr>
                        <td valign="top" class="{item.title}"> 颁奖周期： </td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="settingText" styleName="textmy"/>
                       	</td>
                       	
                      </tr>
                      
                      <tr>
                        <td class="{item.title}" valign="top">自动颁奖：</td>
                        <td class="{item.intext}" colspan="2"><g:CheckBox ui:field="autoCbx" /></td>
                       
                      </tr>
                     
                      <tr>
                        <td valign="top" class="{item.title}">下次公布时间：</td>
                        <td class="{item.intext}" colspan="2"><g:Label ui:field="nextPublicTime" styleName="textmy"/></td>
                        
                      </tr>
                      <tr>
                        <td class="{item.title}" valign="top">特殊条件：</td>
                        <td class="{item.intext}" colspan="2"><g:CheckBox ui:field="specialCbx"></g:CheckBox><g:RadioButton ui:field="birthRadio" name="condition"> 员工生日</g:RadioButton></td>
                     	
                      </tr>
                      </tbody>
                       
                    </table>
                  </div>	
				  
				</div>
				
				
	</g:HTMLPanel>
</ui:UiBinder>