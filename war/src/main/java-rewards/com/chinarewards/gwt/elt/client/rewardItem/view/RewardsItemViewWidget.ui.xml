<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
   	
   	<ui:image resource="input_text.jpg" field="input_text" repeatStyle="Horizontal"></ui:image>
	<ui:image resource="preview_bg.jpg" field="preview_bg" repeatStyle="Horizontal"></ui:image>
	<ui:image field="post_bg" resource="post_bg.jpg" repeatStyle="Horizontal"></ui:image>
	<ui:style src="rewardsItem.css" field="item"></ui:style>
	<ui:style src="elt_min.css" field="newitem"></ui:style>
	<g:HTMLPanel styleName="{newitem.frame-wrap}">
	
	<!-- add form tag, using to resolve radioButton groupname -->
		<div class="breadcrumb">   
			    <div class="{newitem.breadcrumb-wrap}">
			      <p class="{newitem.breadcrumb-left}"><a href="#">公司奖项库</a> > <span>查看奖项</span></p>
			      <a href="#" class="{newitem.breadcrumb-right}">返回上一页</a>
			      </div>
			       <span class="{newitem.cutline}"></span>
		         </div>
				<!-- 1内容 -->
                <div class="{newitem.content-wrap}">  
                   <table width="100%" border="0" cellspacing="0" cellpadding="0" class="{newitem.form}">
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 奖项名称：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="rewardsName" /></td>
                      	
                      </tr>
                      
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 奖项说明：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="rewardsDefinition"   /></td>
                    	
                      </tr>
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 奖项条件：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="standard"   /></td>
                     	
                      </tr>
					  <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 获奖名额：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="peopleSizeLimit" /></td>
                      </tr>
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 总积分：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="totalJF" /></td>
                     	
                      </tr>
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 每人得奖积分：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="rewardsFrom" /></td>
                     	
                      </tr>
                       <tbody id="tm">
                       <tr class="{newitem.form-line}">
				           <td valign="top" class="{newitem.label}"> 提名人：</td>
				           <td class="{newitem.element}" ><g:FlowPanel ui:field="staffAreaPanel" /> </td>
				              
				       </tr>
				       </tbody>
                      <tr class="{newitem.form-line}">
				            <td valign="top" class="{newitem.label}"> 候选人：</td>
				            <td class="{newitem.element}" ><g:FlowPanel ui:field="staffPanel" /> </td>
				               
				       </tr>
                     
					  <tr class="{newitem.form-line}">
					  <td valign="top" class="{newitem.label}">奖项模式</td>
					  <td  class="{newitem.element}"  ><g:Label ui:field="itemModel" /></td>
					  </tr>
                       <tr class="{newitem.form-line}">
                        <td class="{newitem.label}"> 开始时间： </td>
                        <td class="{newitem.element}" ><g:Label ui:field="startTime" /></td>
                      	
                      </tr>
                     <tbody id="ones">
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}">预计颁奖时间：</td>
                        <td class="{newitem.element}" ><g:InlineLabel ui:field="expectTime" />     提前<g:InlineLabel ui:field="tmdays" />天提名</td>
						
                      </tr>
                      </tbody>
                      <tbody id="period"> 
                       <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}">下次颁奖时间：</td>
                        <td class="{newitem.element}" ><g:InlineLabel ui:field="nextRewardsTime"  />   提前<g:InlineLabel ui:field="tmday" />天提名</td>
						
                      </tr>                     	
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}"> 颁奖周期： </td>
                        <td class="{newitem.element}" ><g:Label ui:field="settingText" />
                       	</td>
                       	
                      </tr>
                      
                      <tr class="{newitem.form-line}">
                        <td class="{newitem.label}" valign="top">自动颁奖：</td>
                        <td class="{newitem.element}" ><g:CheckBox ui:field="autoCbx" /></td>
                       
                      </tr>
                     
                      <tr class="{newitem.form-line}">
                        <td valign="top" class="{newitem.label}">下次公布时间：</td>
                        <td class="{newitem.element}" ><g:Label ui:field="nextPublicTime" /></td>
                        
                      </tr>
                      <tr class="{newitem.form-line}">
                        <td class="{newitem.label}" valign="top">特殊条件：</td>
                        <td class="{newitem.element}" ><g:CheckBox ui:field="specialCbx"></g:CheckBox><g:RadioButton ui:field="birthRadio" name="condition"> 员工生日</g:RadioButton></td>
                     	
                      </tr>
                      </tbody>
                        <tr height="30px"><td></td></tr>
                       <tr class="{newitem.form-line}">
					  <td colspan="2"  align="center" >
					   <span class="{newitem.btn}">  <g:Button ui:field="back" styleName="button-ok">返回 </g:Button></span>
					   <span class="{newitem.btn}">  <g:Button ui:field="update" styleName="button-ok">修改 </g:Button></span>
					   </td>
					  </tr>
                    </table>
                  </div>	
				 
				
				
	</g:HTMLPanel>
</ui:UiBinder>