<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
   	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
   	<ui:image resource="input_text.jpg" field="input_text" repeatStyle="Horizontal"></ui:image>
	<ui:image resource="button_addpe.jpg" field="button_addpe"></ui:image>
	<ui:style src="staffBlock.css" ></ui:style>
	<ui:style src="elt_min.css" field="newitem"></ui:style>
	
	<g:HTMLPanel ui:field="select1" styleName="{newitem.frame-wrap}">
		
	   <div class="{newitem.content-wrap}">  
		<table border="0" cellspacing="0" cellpadding="0" width="100%" class="{newitem.form}">
           
            <tr class="{newitem.form-line}">
            	<td colspan="3" >
            		<table width="100%" border="0" cellspacing="0" cellpadding="0" class="{newitem.form}">
            			 <tr class="{newitem.form-line}">
				              <td  class="{newitem.label}" ><span>*</span> 候选人员：</td>
				              <td class="{newitem.element}" >
				               		<g:RadioButton ui:field="everyoneRbtn" name="chooseRadio">全体员工</g:RadioButton>
						<g:RadioButton ui:field="someoneRbtn" name="chooseRadio">以下部门/员工</g:RadioButton>
				              </td>
				             
				         </tr>
				         
            		</table>
            	</td>
            </tr>
            <tr class="{newitem.form-line}">
            	<td colspan="3" >
            		<table width="100%" border="0" cellspacing="0" cellpadding="0" class="{newitem.form}">
            			 <tr class="{newitem.form-line}">
				              <td  class="{newitem.label}" ><span>*</span> 快速选择：</td>
				              <td class="{newitem.element}" id="specialTextCss" width="300px" >
				               		<g:HorizontalPanel ui:field="suggestBoxPanel" styleName="{newitem.element2}"/>
				               		<span class="{newitem.btn}"> <g:Button ui:field="chooseBtn" styleName="">选择</g:Button></span>
				              </td>
				             
				         </tr>
				         <tr class="{newitem.form-line}">
				               <td  class="{newitem.label}">合格人选：</td>
				               <td class="{newitem.element}" width="300px"><g:FlowPanel ui:field="staffTextAreaPanel"/> </td>
				               
				         </tr>
            		</table>
            	</td>
            </tr>
        </table>
        </div>
	</g:HTMLPanel>
</ui:UiBinder>